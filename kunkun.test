server {
    listen 80;
    server_name kunkun.test;

    # ===============================
    # 后端 API
    # ===============================
    location /api/ {
        proxy_pass http://127.0.0.1:18001/;
        include /etc/nginx/includes/proxy_common.conf;
    }

    # ===============================
    # 前端 Vue
    # ===============================
    location / {
        proxy_pass http://127.0.0.1:18002;
        include /etc/nginx/includes/proxy_common.conf;
    }
}